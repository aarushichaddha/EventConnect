<?php

/**
 * @file
 * Event Registration module file.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function event_registration_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.event_registration':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Event Registration module allows users to register for events via a custom form, stores registrations, and sends email notifications.') . '</p>';
      $output .= '<h3>' . t('Uses') . '</h3>';
      $output .= '<dl>';
      $output .= '<dt>' . t('Configuring events') . '</dt>';
      $output .= '<dd>' . t('Administrators can configure events at <a href=":event_config">Event Configuration</a>.', [':event_config' => '/admin/config/event-registration/event-config']) . '</dd>';
      $output .= '<dt>' . t('Managing settings') . '</dt>';
      $output .= '<dd>' . t('Administrators can configure email settings at <a href=":settings">Settings</a>.', [':settings' => '/admin/config/event-registration/settings']) . '</dd>';
      $output .= '<dt>' . t('Viewing registrations') . '</dt>';
      $output .= '<dd>' . t('Administrators can view registrations at <a href=":registrations">Registrations</a>.', [':registrations' => '/admin/event-registration/registrations']) . '</dd>';
      $output .= '</dl>';
      return $output;
  }
}

/**
 * Implements hook_mail().
 */
function event_registration_mail($key, &$message, $params) {
  switch ($key) {
    case 'registration_confirmation':
      $message['subject'] = t('Event Registration Confirmation - @event_name', [
        '@event_name' => $params['event_name'],
      ]);
      $message['body'][] = t('Dear @name,', [
        '@name' => $params['full_name'],
      ]);
      $message['body'][] = '';
      $message['body'][] = t('Thank you for registering for the event. Here are your registration details:');
      $message['body'][] = '';
      $message['body'][] = t('Name: @name', ['@name' => $params['full_name']]);
      $message['body'][] = t('Event Name: @event_name', ['@event_name' => $params['event_name']]);
      $message['body'][] = t('Event Date: @event_date', ['@event_date' => $params['event_date']]);
      $message['body'][] = t('Category: @category', ['@category' => $params['event_category']]);
      $message['body'][] = '';
      $message['body'][] = t('We look forward to seeing you at the event!');
      $message['body'][] = '';
      $message['body'][] = t('Best regards,');
      $message['body'][] = t('The Event Team');
      break;

    case 'admin_notification':
      $message['subject'] = t('New Event Registration - @event_name', [
        '@event_name' => $params['event_name'],
      ]);
      $message['body'][] = t('A new registration has been submitted for the event.');
      $message['body'][] = '';
      $message['body'][] = t('Registration Details:');
      $message['body'][] = '';
      $message['body'][] = t('Name: @name', ['@name' => $params['full_name']]);
      $message['body'][] = t('Email: @email', ['@email' => $params['email']]);
      $message['body'][] = t('College: @college', ['@college' => $params['college_name']]);
      $message['body'][] = t('Department: @department', ['@department' => $params['department']]);
      $message['body'][] = t('Event Name: @event_name', ['@event_name' => $params['event_name']]);
      $message['body'][] = t('Event Date: @event_date', ['@event_date' => $params['event_date']]);
      $message['body'][] = t('Category: @category', ['@category' => $params['event_category']]);
      $message['body'][] = '';
      $message['body'][] = t('This is an automated notification.');
      break;
  }
}

/**
 * Implements hook_theme().
 */
function event_registration_theme($existing, $type, $theme, $path) {
  return [
    'event_registration_admin_listing' => [
      'variables' => [
        'event_dates' => [],
        'event_names' => [],
        'registrations' => [],
        'participant_count' => 0,
        'selected_date' => '',
        'selected_event' => '',
      ],
    ],
  ];
}
